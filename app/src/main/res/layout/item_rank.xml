<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/rank_rela"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/rank_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:padding="5dp" />

        <ImageView
            android:clickable="true"
            android:id="@+id/rank_play"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/rank_image"
            android:layout_alignRight="@id/rank_image"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="5dp"
            android:src="@drawable/playrank" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/rank_rela"
        android:orientation="vertical">

        <TextView
            android:id="@+id/rankname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="榜名" />

        <TextView
            android:id="@+id/rankone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="第一" />

        <TextView
            android:id="@+id/ranktwo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="第二" />

        <TextView
            android:id="@+id/rankthree"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="第三" />
    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:src="@mipmap/more" />
</RelativeLayout>