<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <FrameLayout
        android:id="@+id/weizhi_today"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <lanou.baidu.myview.CircleImageView
            android:id="@+id/img_today"
            android:layout_width="50dp"
            android:layout_height="50dp"
            />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@mipmap/ic_list_dropdown_play_normal" />
    </FrameLayout>

    <LinearLayout

        android:id="@+id/text_weizhi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="80dp"
        android:layout_toRightOf="@id/weizhi_today"
        android:orientation="vertical">

        <TextView
            android:id="@+id/song_today"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1" />

        <TextView
            android:id="@+id/singer_today"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:maxLines="1" />


    </LinearLayout>

    <RadioButton
        android:id="@+id/btn_radio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:background="@mipmap/bt_recsong_more"
        android:button="@null" />
</RelativeLayout>